@model TodoListApp.Models.TodoItem

<h1>Delete To-Do Item</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@(Model.DueDate?.ToString("d MMM yyyy") ?? "No due date")</dd>
        <dt class="col-sm-2">Completed</dt>
        <dd class="col-sm-10">@(Model.IsCompleted ? "Yes" : "No")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>